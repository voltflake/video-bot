{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"trailingCommas": "none",
			"indentWidth": 2,
			"semicolons": "always",
			"quoteStyle": "double",
			"lineWidth": 200
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"complexity": {
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noExplicitAny": "warn"
			},
			"style": {
				"useNamingConvention": "off",
				"useDefaultSwitchClause": "off",
				"useEnumInitializers": "off"
			},
			"correctness": {
				"noUndeclaredVariables": "off",
				"noNodejsModules": "off"
			},
			"performance": {
				"useTopLevelRegex": "off"
			},
			"nursery": {
				"all": true,
				"noProcessEnv": "off",
				"noSecrets": "off"
			}
		}
	}
}
